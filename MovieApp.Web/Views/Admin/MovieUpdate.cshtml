@model AdminEditMovieViewModel

<h1>Edit Movie</h1>

<form method="post" asp-controller="Admin" asp-action="movieupdate">
    <div class="row">

        <div class=" col-md-8">
            <div asp-validation-summary="All"></div>
            <input type="hidden" name="MovieId" value="@Model.MovieId" />
            <div class="mb-3">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" value="@Model.Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" value="@Model.Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="hidden" name="ImageUrl" value="@Model.ImageUrl"/>
                <input type="file" name="file" class="form-control" />

            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class=" col-md-4">

            @foreach (var item in (List<Genre>)ViewBag.Genres)
            {
                <div class="form-check">
                    <input class="form-check-input" 
                    type="checkbox" 
                    name="genreIds"
                    value="@item.GenreId" 
                    id="genre_@(item.GenreId)"
                    @(Model.GenreIds!=null?Model.GenreIds.Any(i => i == item.GenreId) ? "checked" : "":"")>
                    <label class="form-check-label" for="genre_@(item.GenreId)">
                        @item.Name
                    </label>
                </div>
            }
            <span asp-validation-for="GenreIds" class="text-danger"></span>
        </div>
    </div>
</form>

@section scripts
{
    <script src="https://cdn.ckeditor.com/4.24.0-lts/basic/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Description');
    </script>

}
